                        jQuery('#link').html('<p>Link para acceder a la wantlist </p><a href="'+data+'#want" class="btn btn-success">WantList</a>');

                            } else {
                                jQuery('#link').html('Usuario No participante en la mathtrade');
                            }
                    }
            );
        });
    });
    </script>

