        {{else}}
        
        <div class="col-md-2">
            <img class="" src="{{bgg_img}}" />
        </div>
        <div class="col-md-10" style="position:relative; min-height:175px;">
            <h4 data-id="{{item_id}}">{{name}}</h4>
            <p>{{description}}</p>
            <button data-toggle-mt="{{id}}" class="btn">{{#if inMT}}Quitar de la MT{{else}}AÃ±adir a la MT{{/if}}</button>
        </div>
        {{/if}}
    </div>
    {{/each}}

</script>
{% endverbatim %}



<script type="text/javascript">
    var games = JSON.parse('{{ games|raw }}');  
</script>
{% endblock %}
