<?xml version="1.0" encoding="utf-8" ?>
<phpunit colors="true">
    <logging>
        <log type="coverage-clover" target="build/logs/clover.xml"/>
    </logging>
    <testsuites>
        <testsuite name="The project's test suite">
            <directory>./tests</directory>
        </testsuite>
        <filter>
            <whitelist >
                <directory suffix=".php">./src</directory>
            </whitelist>
        </filter>
    </testsuites>
</phpunit>

